{
  "name": "shippai",
  "version": "0.1.0",
  "description": "Status Check Dasboard for GitHub Pull Requests",
  "author": "jamsinclair <jamsinclairnz@gmail.com>",
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "start": "budo ./src/shippai.js --open --live --pushstate --base=/",
    "bundle": "browserify ./src/shippai.js -o ./dist/shippai.js",
    "compress": "uglifyjs ./dist/shippai.js -o ./dist/shippai.min.js -m -r '$,require,exports'",
    "html": "cp ./src/index.html ./dist/200.html",
    "build": "yarn run html && yarn run bundle && yarn run compress",
    "deploy": "yarn run build && surge ./dist shippai.surge.sh"
  },
  "license": "UNLICENSED",
  "private": "true",
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "budo": "^9.2.1",
    "choo": "^3.3.0",
    "fecha": "^2.3.0",
    "github-lite": "^0.2.0",
    "normalize.css": "^5.0.0",
    "rimraf": "^2.5.4",
    "sheetify": "^6.0.1",
    "sheetify-postcss": "^1.0.1",
    "sheetify-sass": "^1.0.2",
    "spinkit": "^1.2.5",
    "surge": "^0.18.0",
    "uglify-js": "^2.7.5"
  },
  "browserify": {
    "transform": [
      [
        "sheetify/transform",
        {
          "use": [
            "sheetify-sass",
            [
              "sheetify-postcss",
              {
                "plugins": [
                  "autoprefixer"
                ]
              }
            ]
          ]
        }
      ],
      "babelify"
    ]
  }
}
